<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CDub_Maui_Categories_API_Client.Views.DetailPage"
             NavigationPage.HasNavigationBar="False"
             Title="Category Detail Page">
    <VerticalStackLayout Margin="30">
        <Label Text="a" x:Name="lblPageHeading" HorizontalOptions="Center" FontSize="Large" TextColor="Indigo" />
        <Label Text="Name:" Margin="0,30,0,0" />
        <Entry Text="{Binding Name}" 
               Placeholder="enter category name" />
        <Label Text="Display Order:" Margin="0,15,0,0" />
        <Entry Text="{Binding DisplayOrder}"
               Placeholder="enter display order"
               Keyboard="Numeric"/>
        <Line X1="40" X2="330" Y1="150" Y2="150" Stroke="Black" />
        <Button Text="Save" 
                Margin="20,25,20,15"
                Clicked="SaveButton_Clicked" />
        <Button Text="Delete"
                Margin="20,15,20,15"
                Clicked="DeleteButton_Clicked" />
        <Button Text="Cancel" 
                  Margin="20,15,20,15"
                Clicked="CancelButton_Clicked" />
    </VerticalStackLayout>
</ContentPage>